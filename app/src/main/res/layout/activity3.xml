<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--<TextClock-->
        <!--android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"-->
        <!--android:layout_height="@dimen/abc_action_bar_stacked_max_height"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_showText"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#ff00ff"
        android:textSize="24sp"
        android:text="This is TextView"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TheSecend"
        android:id="@+id/TheSecend"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type something in here"
        android:id="@+id/editText"
        android:layout_gravity="center"
        android:minLines="2"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center"
        android:id="@+id/image1"/>


</LinearLayout>